<?xml version="1.0"?>
<robot name="DualShock">
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <link name="base_link">
        <contact>
            <lateral_friction value="1.0"/>
            <rolling_friction value="0.0"/>
            <contact_cfm value="0.0"/>
            <contact_erp value="1.0"/>
        </contact>
        <visual>
            <geometry>
                <mesh filename="dualshock_4.obj" scale="0.000977 0.000977 0.000977"/>
            </geometry>
            <origin rpy="0 0 1.57" xyz="0 0 0" />
            <material name="grey">
                <color rgba="0 0 0 0.5"/>
            </material>
        </visual>

        <collision>
            <geometry>
                <mesh filename="dualshockVHACD.obj" scale="0.000977 0.000977 0.000977"/>
            </geometry>
            <origin rpy="0 0 1.57" xyz="0 0 0" />
        </collision>
        <inertial>
            <origin rpy="0 0 1.57" xyz="-0.05 0.02 -0.02"/>
            <mass value="0.2"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>

<!--specify baxter's configuration for grasping-->
<baxter finger="extended_narrow" slot="3" tip="basic_soft" grasp="inner"/>
</robot>

